<h1 align="center"> Welcome to <b><%= @user.full_name %></b> profile page </h1>
<div class="row">
	<div class="col-md-4 col-md-offset-4 center">
		<%= gravatar_for @user, size:150 %>
	</div>
</div>
<div class="center">
		<strong>Mobile Number:</strong> <%= @user.mobile_number %><br/>
		<strong>Email:</strong> <%= @user.email %>
</div>

<h4 align="center"><%= @user.full_name %>'s articles </h4>
<%= render 'shared/articles', obj: @user.articles %>